<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="md_background_color">@color/colorBackgroundDialog</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorTransparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.SearchView" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:editTextColor">?android:textColorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BottomNavigationView.Inactive" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
    </style>


    <style name="TextAppearance.Mousiki.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/pangram_regular</item>
    </style>

    <style name="TextAppearance.Mousiki.HeaderTitle" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:fontFamily">@font/pangram_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">?colorOnSurface</item>
    </style>

    <style name="AppTheme.AlertDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:background">@color/colorBackgroundDialog</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonStyle</item>
        <item name="dialogCornerRadius">4dp</item>
    </style>

    <style name="DialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="DialogPrimaryButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="OutlinedButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="DialogSecondaryButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">#94959A</item>
        <item name="backgroundTint">#EFEFF1</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="TooltipLayoutStyle">
        <item name="android:textAppearance">@style/TooltipLayoutStyle.TextAppearance</item>
        <item name="ttlm_backgroundColor">#087FF4</item>
        <item name="ttlm_padding">16dp</item>
        <item name="ttlm_arrowRatio">1.4</item>
        <item name="ttlm_cornerRadius">8dp</item>
        <item name="android:gravity">center</item>
        <item name="ttlm_overlayStyle">@style/TooltipOverlay</item>
        <item name="ttlm_elevation">8dp</item>
    </style>

    <style name="TooltipOverlay">
        <item name="android:color">@color/colorAccent</item>
        <item name="android:alpha">0.8</item>
        <item name="android:layout_margin">40dp</item>
        <item name="ttlm_repeatCount">30</item>
        <item name="ttlm_duration">1000</item>
    </style>

    <style name="TooltipLayoutStyle.TextAppearance" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/pangram_regular</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextAppearance.App.Button.tabs" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="AppTheme.SectionBackButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:drawableLeft">@drawable/ic_back</item>
        <item name="android:text">Back</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_black</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="cornerRadius">48dp</item>
        <item name="iconSize">12dp</item>
        <item name="iconGravity">textTop</item>
        <item name="backgroundTint">@color/buttonBackgroundColor</item>
        <item name="iconTint">?colorOnSurface</item>
    </style>

    <style name="rounded_corner">
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>
</resources>
