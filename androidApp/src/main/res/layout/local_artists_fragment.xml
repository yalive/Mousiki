<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.local.artists.LocalArtistsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/local_artists_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="8"
        tools:listitem="@layout/item_local_artist" />

    <include
        android:id="@+id/storagePermissionView"
        layout="@layout/layout_no_storage_permission"
        android:visibility="gone" />
</FrameLayout>