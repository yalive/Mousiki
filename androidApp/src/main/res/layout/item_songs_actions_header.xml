<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/sixteen_16dp"
    android:orientation="horizontal">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sort_song"
        style="@style/Widget.App.Button.OutlinedButton.IconOnly"
        android:layout_width="@dimen/btn_size_header"
        android:layout_height="@dimen/btn_size_header"
        android:layout_marginEnd="@dimen/eight_8dp"
        app:icon="@drawable/ic_sort" />

    <TextView
        android:id="@+id/songs_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/sixteen_16dp"
        android:layout_marginEnd="@dimen/sixteen_16dp"
        android:layout_weight="1"
        android:fontFamily="@font/roboto_black"
        android:gravity="center|start"
        android:textColor="?colorOnSurface"
        android:textSize="14sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/filter_songs"
        style="@style/Widget.App.Button.OutlinedButton.IconOnly"
        android:layout_width="@dimen/btn_size_header"
        android:layout_height="@dimen/btn_size_header"
        android:layout_marginEnd="@dimen/eight_8dp"
        app:icon="@drawable/ic_filter_24" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/shuffle_song"
        style="@style/Widget.App.Button.OutlinedButton.IconOnly"
        android:layout_width="@dimen/btn_size_header"
        android:layout_height="@dimen/btn_size_header"
        android:layout_marginEnd="@dimen/eight_8dp"
        app:icon="@drawable/ic_random" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/play_all_song"
        style="@style/Widget.App.Button.OutlinedButton.IconOnly"
        android:layout_width="@dimen/btn_size_header"
        android:layout_height="@dimen/btn_size_header"
        app:icon="@drawable/ic_play" />
</LinearLayout>