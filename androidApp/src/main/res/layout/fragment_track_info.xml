<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/scroller"
        android:layout_width="35dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/eight_8dp"
        android:alpha="0.6"
        android:background="@drawable/bg_rounded_button"
        android:backgroundTint="?colorOnSurface" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgTrack"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:elevation="@dimen/four_4dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/rounded_corner" />

        <TextView
            android:id="@+id/edit"
            android:textSize="16sp"
            android:visibility="gone"
            android:textColor="@color/colorBlue"
            android:fontFamily="@font/pangram_bold"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/track_edit" />
        <TextView
            android:id="@+id/save"
            android:textSize="16sp"
            android:visibility="gone"
            android:textColor="@color/colorBlue"
            android:fontFamily="@font/pangram_bold"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/track_save" />
    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:enabled="false"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center_vertical"
        android:lines="1"
        android:text="@string/track_name"
        android:textColor="?android:textColorPrimary"
        android:textDirection="ltr"
        android:textSize="12sp"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/txtTrackTitleTv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center_vertical"
        android:lines="1"
        android:textColor="?android:textColorPrimary"
        android:textDirection="ltr"
        android:textSize="14sp"
        tools:ignore="SmallSp"
        tools:text="Track title" />

    <EditText
        android:id="@+id/txtTrackTitle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center_vertical"
        android:lines="1"
        android:textColor="?android:textColorPrimary"
        android:textDirection="ltr"
        android:textSize="14sp"
        android:visibility="gone"
        tools:ignore="SmallSp"
        tools:text="Track title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:enabled="false"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center_vertical"
        android:lines="1"
        android:text="@string/track_artist"
        android:textColor="?android:textColorPrimary"
        android:textDirection="ltr"
        android:textSize="12sp"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/txtTrackArtistTv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center_vertical"
        android:lines="1"
        android:textColor="?android:textColorPrimary"
        android:textSize="14sp"
        tools:ignore="SmallSp"
        tools:text="Artist name" />

    <EditText
        android:id="@+id/txtTrackArtist"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center_vertical"
        android:lines="1"
        android:textColor="?android:textColorPrimary"
        android:textSize="14sp"
        android:visibility="gone"
        tools:ignore="SmallSp"
        tools:text="Artist name" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:enabled="false"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center_vertical"
        android:lines="1"
        android:text="@string/track_album"
        android:textColor="?android:textColorPrimary"
        android:textDirection="ltr"
        android:textSize="12sp"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/txtTrackAlbumTv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center_vertical"
        android:lines="1"
        android:textColor="?android:textColorPrimary"
        android:textSize="14sp"
        tools:ignore="SmallSp"
        tools:text="Album name" />

    <EditText
        android:id="@+id/txtTrackAlbum"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center_vertical"
        android:lines="1"
        android:textColor="?android:textColorPrimary"
        android:textSize="14sp"
        android:visibility="gone"
        tools:ignore="SmallSp"
        tools:text="Album name" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:enabled="false"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center_vertical"
        android:lines="1"
        android:text="@string/track_composer"
        android:textColor="?android:textColorPrimary"
        android:textDirection="ltr"
        android:textSize="12sp"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/txtTrackComposerTv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center_vertical"
        android:lines="1"
        android:textColor="?android:textColorPrimary"
        android:textSize="14sp"
        tools:ignore="SmallSp"
        tools:text="Composer name" />

    <EditText
        android:id="@+id/txtTrackComposer"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center_vertical"
        android:lines="1"
        android:textColor="?android:textColorPrimary"
        android:textSize="14sp"
        android:visibility="gone"
        tools:ignore="SmallSp"
        tools:text="Composer name" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:enabled="false"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center_vertical"
        android:lines="1"
        android:text="@string/track_duration"
        android:textColor="?android:textColorPrimary"
        android:textDirection="ltr"
        android:textSize="12sp"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/txtTrackDurationTv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center_vertical"
        android:lines="1"
        android:textColor="?android:textColorPrimary"
        android:textSize="14sp"
        tools:ignore="SmallSp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:enabled="false"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center_vertical"
        android:lines="1"
        android:text="@string/track_size"
        android:textColor="?android:textColorPrimary"
        android:textDirection="ltr"
        android:textSize="12sp"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/txtTrackSizeTv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center_vertical"
        android:lines="1"
        android:textColor="?android:textColorPrimary"
        android:textSize="14sp"
        tools:ignore="SmallSp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:enabled="false"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center_vertical"
        android:lines="1"
        android:text="@string/track_path"
        android:textColor="?android:textColorPrimary"
        android:textDirection="ltr"
        android:textSize="12sp"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/txtTrackPathTv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center_vertical"
        android:lines="1"
        android:textColor="?android:textColorPrimary"
        android:textSize="14sp"
        tools:ignore="SmallSp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/half_05dp"
        android:layout_marginTop="@dimen/spacing_normal"
        android:alpha="0.5"
        android:background="#616060" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/twenty_four_24dp"
        app:cardBackgroundColor="@color/cardAdBackgroundColor">

        <com.google.android.gms.ads.nativead.NativeAdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="@dimen/twenty_four_24dp"
            android:paddingStart="@dimen/eight_8dp"
            android:paddingTop="@dimen/four_4dp"
            android:paddingEnd="@dimen/eight_8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/eight_8dp"
                android:layout_marginTop="@dimen/eight_8dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/ad_media_card"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    app:layout_constraintEnd_toStartOf="@id/guidLine"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.gms.ads.nativead.MediaView
                        android:id="@+id/ad_media"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        tools:background="@drawable/image_chart_latin" />
                </com.google.android.material.card.MaterialCardView>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.4" />

                <TextView
                    android:id="@+id/ad_headline"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="@dimen/eight_8dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/pangram_bold"
                    android:maxLines="1"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toStartOf="@id/ad_attribution"
                    app:layout_constraintStart_toEndOf="@id/guidLine"
                    app:layout_constraintTop_toTopOf="@id/ad_media_card"
                    tools:text="Test Ad" />

                <TextView
                    android:id="@+id/ad_attribution"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_ad_attribute"
                    android:fontFamily="@font/pangram_bold"
                    android:gravity="center"
                    android:text="AD"
                    android:textColor="@color/colorBlack"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="@id/ad_headline"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/ad_headline"
                    tools:ignore="HardcodedText,SmallSp" />

                <TextView
                    android:id="@+id/ad_body"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="@dimen/four_4dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/pangram_regular"
                    android:maxLines="2"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/ad_headline"
                    app:layout_constraintTop_toBottomOf="@id/ad_headline"
                    tools:text="Ad Body" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ad_call_to_action"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:fontFamily="@font/pangram_bold"
                    android:gravity="center"
                    android:insetBottom="0dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/ad_media_card"
                    app:layout_constraintStart_toStartOf="@id/ad_headline"
                    tools:text="More info" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/vClickable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/ad_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="4dp"
                    android:adjustViewBounds="true"
                    tools:src="@drawable/img_genre_latest_arabic" />

                <TextView
                    android:id="@+id/ad_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pangram_regular"
                    android:paddingStart="5dp"
                    android:paddingLeft="5dp"
                    android:paddingEnd="5dp"
                    android:paddingRight="5dp"
                    android:textSize="11sp"
                    tools:ignore="SmallSp"
                    tools:text="FREE" />

                <TextView
                    android:id="@+id/ad_store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pangram_regular"
                    android:paddingStart="5dp"
                    android:paddingLeft="5dp"
                    android:paddingEnd="5dp"
                    android:paddingRight="5dp"
                    android:textSize="11sp"
                    tools:ignore="SmallSp"
                    tools:text="Google" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:id="@+id/ad_advertiser"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/pangram_regular"
                    android:gravity="bottom"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/ad_stars"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize="0.5" />
            </LinearLayout>

        </com.google.android.gms.ads.nativead.NativeAdView>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>