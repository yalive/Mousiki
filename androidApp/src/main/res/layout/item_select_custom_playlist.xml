<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/imgPlaylist"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/sixteen_16dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/img_genre_jaz" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/eight_8dp"
            android:fontFamily="@font/pangram_regular"
            android:textColor="?colorOnSurface"
            tools:text="Music study" />

        <TextView
            android:id="@+id/txtTracksCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/eight_8dp"
            android:fontFamily="@font/pangram_light"
            android:textColor="?colorOnSurface"
            android:textSize="12sp"
            tools:text="Music study" />
    </LinearLayout>
</LinearLayout>