<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <item
        tools:height="720dp"
        tools:width="360dp">
        <shape>
            <solid android:color="@color/colorDarkNavigationView" />
            <corners
                android:topLeftRadius="@dimen/eight_8dp"
                android:topRightRadius="@dimen/eight_8dp" />
        </shape>
    </item>

    <item
        android:gravity="top|center_horizontal"
        android:top="@dimen/spacing_small">
        <shape android:shape="rectangle">
            <size
                android:width="35dp"
                android:height="4dp" />
            <corners android:radius="2dp" />
            <solid android:color="@color/color_on_surface_50" />
        </shape>
    </item>
</layer-list>