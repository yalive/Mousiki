<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@drawable/bg_mini_player"
    tools:layout_height="@dimen/bottom_pannel_height"
    tools:layout_width="match_parent"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <ProgressBar
        android:id="@+id/progressDuration"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:max="100"
        android:progressBackgroundTint="@color/colorTransparent"
        android:progressTint="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:progress="25" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressDuration">

        <View
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            tools:background="#000" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/eight_8dp"
            android:layout_marginEnd="@dimen/eight_8dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/pangram_regular"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/colorWhite" />

        <ImageButton
            android:id="@+id/btnPlayPause"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?selectableItemBackgroundBorderless"
            android:contentDescription="@string/app_name"
            android:tint="@color/colorWhite"
            app:srcCompat="@drawable/ic_pause" />

        <ImageButton
            android:id="@+id/btnShowQueue"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="?selectableItemBackgroundBorderless"
            android:contentDescription="@string/app_name"
            android:tint="@color/colorWhite"
            app:srcCompat="@drawable/ic_queue_music" />
    </LinearLayout>
</merge>