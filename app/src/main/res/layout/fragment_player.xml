<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/antiDrag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/ThemeOverlay.MaterialComponents.Dark"
    tools:context=".ui.player.PlayerFragment">

    <RelativeLayout
        android:id="@+id/mainView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="#0F1537"
        tools:alpha="1">

        <ImageView
            android:id="@+id/imgBlured"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/fullScreenSwitchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTransparent"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <ImageButton
                android:id="@+id/btnClosePanel"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="?selectableItemBackgroundBorderless"
                android:contentDescription="@string/app_name"
                android:rotation="90"
                android:scaleType="fitXY"
                android:tint="@color/colorWhite"
                app:srcCompat="@drawable/ic_arrow_right" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btnLockScreen"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="?selectableItemBackgroundBorderless"
                android:contentDescription="@string/app_name"
                android:tint="@color/colorWhite"
                app:srcCompat="@drawable/ic_lock_screen" />

            <ImageButton
                android:id="@+id/btnFullScreen"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:background="?selectableItemBackgroundBorderless"
                android:contentDescription="@string/app_name"
                android:rotation="90"
                android:tint="@color/colorWhite"
                app:srcCompat="@drawable/ic_fullscreen" />
        </LinearLayout>

        <com.google.android.gms.ads.AdView
            android:id="@+id/bannerAdView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fullScreenSwitchView"
            android:layout_centerHorizontal="true"
            app:adSize="BANNER"
            app:adUnitId="@string/admob_banner_id" />

        <TextView
            android:id="@+id/txtTitleVideoCenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/twenty_four_24dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="@dimen/twenty_four_24dp"
            android:ellipsize="end"
            android:fontFamily="@font/pangram_regular"
            android:gravity="center"
            android:lines="2"
            android:textColor="@color/colorWhite"
            tools:text="Video title" />

        <LinearLayout
            android:id="@+id/btnYoutube"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTitleVideoCenter"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="168dp"
            android:layout_marginEnd="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginEnd="3dp"
                android:alpha="0.6"
                android:background="@null"
                android:fontFamily="sans-serif-light"
                android:letterSpacing="0"
                android:text="@string/label_developed_with_youtube_part1"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="10sp"
                tools:ignore="SmallSp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:alpha="0.9"
                android:background="@null"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:fontFamily="sans-serif-condensed"
                android:gravity="bottom"
                android:letterSpacing="0"
                android:text="@string/label_developed_with_youtube_part2"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/favView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/seekBarView"
            android:layout_marginBottom="24dp"
            android:background="@color/colorTransparent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <ImageButton
                android:id="@+id/btnShareVia"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="?selectableItemBackgroundBorderless"
                android:contentDescription="@string/app_name"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:tint="@color/colorWhite"
                app:srcCompat="@drawable/ic_share_light" />

            <ImageButton
                android:id="@+id/btnAddToPlaylist"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="?selectableItemBackgroundBorderless"
                android:contentDescription="@string/app_name"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:tint="@color/white"
                app:srcCompat="@drawable/ic_playlist_add_rounded" />

            <ImageButton
                android:id="@+id/btnAddFav"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="?selectableItemBackgroundBorderless"
                android:contentDescription="@string/app_name"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:tint="@color/white"
                app:srcCompat="@drawable/ic_heart_light" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/seekBarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/playbackControlsView"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="@dimen/twenty_four_24dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtElapsedTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pangram_regular"
                android:minWidth="@dimen/twenty_four_24dp"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                tools:text="02:22" />

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/seekBarDuration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progressTint="@color/colorAccent"
                android:thumbTint="@color/colorAccent"
                tools:progress="25" />

            <TextView
                android:id="@+id/txtDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pangram_regular"
                android:minWidth="@dimen/twenty_four_24dp"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                tools:text="08:04" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/playbackControlsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorTransparent"
            android:gravity="center_vertical"
            android:paddingTop="16dp"
            android:paddingBottom="@dimen/twenty_four_24dp">

            <ImageButton
                android:id="@+id/btnPlayOption"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:background="?selectableItemBackgroundBorderless"
                android:contentDescription="@string/app_name"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:tint="@color/colorWhite"
                app:srcCompat="@drawable/ic_random" />

            <View
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btnPlayPrevious"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?selectableItemBackgroundBorderless"
                android:contentDescription="@string/app_name"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:tint="@color/colorWhite"
                app:srcCompat="@drawable/ic_skip_previous" />

            <View
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btnPlayPauseMain"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:background="?selectableItemBackgroundBorderless"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:tint="@color/colorWhite"
                app:srcCompat="@drawable/ic_pause" />

            <View
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btnPlayNext"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?selectableItemBackgroundBorderless"
                android:contentDescription="@string/app_name"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:tint="@color/colorWhite"
                app:srcCompat="@drawable/ic_skip_next" />

            <View
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btnShowQueueFull"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:background="?selectableItemBackgroundBorderless"
                android:contentDescription="@string/app_name"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:tint="@color/colorWhite"
                app:srcCompat="@drawable/ic_queue_music" />
        </LinearLayout>
    </RelativeLayout>

    <!-- Top Bar-->
    <LinearLayout
        android:id="@+id/topBarView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_pannel_height"
        android:background="@drawable/bg_mini_player"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible"
        tools:visibility="gone">

        <View
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/eight_8dp"
            android:layout_marginEnd="@dimen/eight_8dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/pangram_regular"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/colorWhite" />

        <ImageButton
            android:id="@+id/btnPlayPause"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?selectableItemBackgroundBorderless"
            android:contentDescription="@string/app_name"
            android:tint="@color/colorWhite"
            app:srcCompat="@drawable/ic_pause" />

        <ImageButton
            android:id="@+id/btnShowQueue"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="?selectableItemBackgroundBorderless"
            android:contentDescription="@string/app_name"
            android:tint="@color/colorWhite"
            app:srcCompat="@drawable/ic_queue_music" />

    </LinearLayout>

    <com.cas.musicplayer.ui.player.LockScreenView
        android:id="@+id/lockScreenView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</FrameLayout>