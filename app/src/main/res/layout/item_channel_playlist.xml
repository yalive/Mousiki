<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:layout_margin="@dimen/four_4dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/four_4dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgSong"
                android:layout_width="120dp"
                android:layout_height="64dp" />

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="64dp"
                android:layout_gravity="end"
                android:background="#8D0E0D0D"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="16"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="@dimen/sixteen_16dp"
                    android:layout_height="@dimen/sixteen_16dp"
                    android:src="@drawable/ic_playlist_play" />

            </LinearLayout>
        </FrameLayout>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/eight_8dp"
            android:textColor="@color/colorWhite"
            tools:text="Hello Test" />

        <TextView
            android:id="@+id/txtCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/eight_8dp"
            android:textColor="#71717A"
            android:textSize="12sp"
            tools:text="Hello Test" />
    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/sixteen_16dp"
        android:layout_gravity="center_vertical"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/ic_more_vertical" />
</LinearLayout>