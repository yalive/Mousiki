<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:background="?selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/four_4dp"
        app:cardCornerRadius="@dimen/four_4dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPlaceholderImage">

            <ImageView
                android:id="@+id/imgSong"
                android:layout_width="100dp"
                android:layout_height="54dp" />

            <TextView
                android:id="@+id/txtDuration"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignEnd="@+id/imgSong"
                android:layout_alignBottom="@+id/imgSong"
                android:layout_marginEnd="@dimen/four_4dp"
                android:layout_marginBottom="@dimen/four_4dp"
                android:background="@drawable/bg_duration_black"
                android:ellipsize="end"
                android:fontFamily="@font/pangram_regular"
                android:gravity="center"
                android:lines="2"
                android:maxLines="2"
                android:padding="@dimen/two_2dp"
                android:textColor="@color/colorWhite"
                android:textSize="11sp"
                tools:ignore="SmallSp"
                tools:text="03:14" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/eight_8dp"
            android:layout_marginEnd="@dimen/eight_8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/indicatorPlaying"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="4dp"
                android:scaleType="centerInside"
                app:lottie_colorFilter="@color/colorAccent"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/playing_animation" />

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/pangram_medium"
                android:maxLines="3"
                android:textColor="?android:textColorPrimary"
                android:textSize="15sp"
                tools:text="Hello Test" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/eight_8dp"
            android:layout_marginEnd="@dimen/eight_8dp"
            android:ellipsize="end"
            android:fontFamily="@font/pangram_regular"
            android:lines="1"
            android:textColor="#A5A5C4"
            android:textSize="12sp"
            tools:text="Hello Test" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="?selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:tint="?colorControlNormal"
        app:srcCompat="@drawable/ic_more_vertical" />
</LinearLayout>