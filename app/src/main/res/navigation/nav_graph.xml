<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dashboardFragment">

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.secureappinc.musicplayer.ui.dashboard.DashboardFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_dashboardFragment_to_detailGenreFragment"
            app:destination="@id/detailGenreFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailGenreFragment"
        android:name="com.secureappinc.musicplayer.ui.detailcategory.DetailGenreFragment"
        android:label="DetailGenreFragment">
        <action
            android:id="@+id/action_detailGenreFragment_to_videoPlayerFragment"
            app:destination="@id/videoPlayerFragment" />
    </fragment>
    <fragment
        android:id="@+id/videoPlayerFragment"
        android:name="com.secureappinc.musicplayer.ui.player.VideoPlayerFragment"
        android:label="Youtube Player"
        tools:layout="@layout/fragment_video_player" />
</navigation>