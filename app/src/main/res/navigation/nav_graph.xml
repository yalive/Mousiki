<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dashboardFragment">

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.cas.musicplayer.ui.dashboard.DashboardFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_dashboardFragment_to_detailGenreFragment"
            app:destination="@id/detailGenreFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_newReleaseFragment"
            app:destination="@id/newReleaseFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_artistFragment"
            app:destination="@id/artistFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_artistsFragment"
            app:destination="@id/artistsFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_searchYoutubeFragment"
            app:destination="@id/searchYoutubeFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_playListFragment"
            app:destination="@id/playListFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_genresFragment"
            app:destination="@id/genresFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_chartsFragment"
            app:destination="@id/chartsFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailGenreFragment"
        android:name="com.cas.musicplayer.ui.genres.detailgenre.DetailGenreFragment"
        android:label="DetailGenreFragment">
        <action
            android:id="@+id/action_detailGenreFragment_to_videoPlayerFragment"
            app:destination="@id/videoPlayerFragment" />
    </fragment>
    <fragment
        android:id="@+id/videoPlayerFragment"
        android:name="com.cas.musicplayer.ui.player.VideoPlayerFragment"
        android:label="Youtube Player"
        tools:layout="@layout/fragment_video_player" />
    <fragment
        android:id="@+id/newReleaseFragment"
        android:name="com.cas.musicplayer.ui.popular.PopularSingsFragment"
        android:label="NewReleaseFragment" />
    <fragment
        android:id="@+id/artistFragment"
        android:name="com.cas.musicplayer.ui.artists.artistdetail.ArtistFragment"
        android:label="ArtistFragment">
        <action
            android:id="@+id/action_artistFragment_to_playlistVideosFragment"
            app:destination="@id/playlistVideosFragment" />
    </fragment>
    <fragment
        android:id="@+id/playlistVideosFragment"
        android:name="com.cas.musicplayer.ui.playlistvideos.PlaylistVideosFragment"
        android:label="PlaylistVideosFragment" />
    <fragment
        android:id="@+id/artistsFragment"
        android:name="com.cas.musicplayer.ui.artists.list.ArtistListFragment"
        android:label="Artists" />
    <fragment
        android:id="@+id/searchYoutubeFragment"
        android:name="com.cas.musicplayer.ui.searchyoutube.SearchYoutubeFragment"
        android:label="" />
    <fragment
        android:id="@+id/playListFragment"
        android:name="com.cas.musicplayer.ui.favourite.FavouriteTracksFragment"
        android:label="@string/favourites"
        tools:layout="@layout/fragment_play_list" />
    <fragment
        android:id="@+id/genresFragment"
        android:name="com.cas.musicplayer.ui.genres.list.GenresFragment"
        android:label="@string/genres" />
    <fragment
        android:id="@+id/chartsFragment"
        android:name="com.cas.musicplayer.ui.charts.ChartsFragment"
        android:label="Charts" />
</navigation>