<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Initially player hidden -->
    <Transition
        android:id="@+id/initialState"
        app:constraintSetEnd="@id/hidden"
        app:constraintSetStart="@id/hidden" />

    <Transition
        app:constraintSetEnd="@id/expanded"
        app:constraintSetStart="@id/collapsed"
        app:duration="300"
        app:layoutDuringTransition="ignoreRequest"
        app:motionInterpolator="easeIn">
        <OnSwipe
            app:dragDirection="dragUp"
            app:dragScale="3000"
            app:dragThreshold="0"
            app:maxAcceleration="30"
            app:moveWhenScrollAtTop="true"
            app:onTouchUp="decelerateAndComplete"
            app:touchAnchorId="@+id/miniPlayerView"
            app:touchAnchorSide="top" />

        <KeyFrameSet>

            <KeyAttribute
                android:alpha="0"
                app:framePosition="40"
                app:motionTarget="@id/mainView"
                app:transitionEasing="accelerate" />

            <KeyAttribute
                android:alpha="0"
                app:framePosition="50"
                app:motionTarget="@id/miniPlayerView"
                app:transitionEasing="accelerate" />
        </KeyFrameSet>

    </Transition>

    <Transition
        android:id="@+id/hidePlayerTransition"
        app:constraintSetEnd="@id/hidden"
        app:constraintSetStart="@id/collapsed"
        app:duration="300"
        app:motionInterpolator="easeInOut">
        <OnSwipe
            app:dragDirection="dragDown"
            app:maxAcceleration="100"
            app:dragThreshold="20"
            app:touchAnchorId="@+id/miniPlayerView"
            app:touchAnchorSide="bottom" />
    </Transition>

    <ConstraintSet android:id="@+id/expanded">
        <Constraint
            android:id="@id/miniPlayerView"
            android:layout_height="60dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:alpha="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/mainView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/playerBgView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/collapsed">
        <Constraint
            android:id="@id/miniPlayerView"
            android:layout_height="60dp"
            android:layout_marginBottom="56dp"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@id/mainView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="@id/miniPlayerView"
            app:layout_constraintEnd_toEndOf="@id/miniPlayerView"
            app:layout_constraintStart_toStartOf="@id/miniPlayerView"
            app:layout_constraintTop_toTopOf="@id/miniPlayerView">
            <PropertySet android:visibility="invisible" />
        </Constraint>

        <Constraint
            android:id="@id/playerBgView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/miniPlayerView"
            app:layout_constraintEnd_toEndOf="@id/miniPlayerView"
            app:layout_constraintStart_toStartOf="@id/miniPlayerView"
            app:layout_constraintTop_toTopOf="@id/miniPlayerView" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/hidden">
        <Constraint
            android:id="@id/miniPlayerView"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="65dp"
            android:alpha="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />

        <Constraint
            android:id="@id/mainView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />

        <Constraint
            android:id="@id/playerBgView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />
    </ConstraintSet>
</MotionScene>